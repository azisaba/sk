on join:
    set player's tab list header to "&7ようこそ、 &r%player% &7さん！"

every 3 second:
    set {_tps} to tps from last 1m
    set {_tps_diff} to abs(20 - {_tps})
    set {_players} to number of all players

    loop all players:
        set loop-player's tab list footer to "&7» PING: &r%loop-player's ping%&7 ms / &7TPS: &r%{_tps}% &7(± &r%{_tps_diff}%&7) / オンライン: &r%{_players}% &7«"
